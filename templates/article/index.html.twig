{% extends 'base.html.twig' %}

{% block title %}Articles - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('article_list') }}
{% endblock %}

{% block body %}

{{ include(
    'components/header/_navbar.html.twig',
    {
        'navList': [
            {name: "Home", path: "app_public_home"},
            {name: "Articles", path: "app_article_index"},
            {name: "Catégories", path: "app_category_index"},
        ],
        'navAction': [],
        'active': "Articles"
    }
    )
}}

<div class="container py-4">

    <a href="{{ path('app_article_new') }}" class="btn btn-success">
        Ajouter un article
    </a>

    <table id="articles-table" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Par</th>
                <th>Catégories</th>
                <th>Likes</th>
                <th>Commentaires</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

{% endblock %}

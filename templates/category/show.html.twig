{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.title }} - Mon Blog{% endblock %}

{% block body %}

    <div class="mb-10">
        {{ 
            include(
                'components/header/_navbar.html.twig',
                {
                    'go_back': path('app_category_index'),
                    'nav_title': "Détail de catégorie"
                }
                )
        }}
    </div>

    <div class="grid grid-cols-2">
        <div class="my-2">
            <strong><u>Nom de la catégorie</u></strong>: {{ category.title }}
        </div>
        <div class="my-2">
            <strong><u>Crée le</u></strong>: {{ category.createdAt|date("d/m/Y H:i") }}
        </div>
        <div class="my-2">
            <strong><u>Description</u>: </strong>
            <p>
                {{ category.description }}
            </p>
        </div>
    </div>

    <div class="flex gap-2 mt-4">
        <a href="{{ path('app_category_edit', {'id': category.id}) }}">
            {{ include('components/buttons/_button_solid.html.twig', {'button_label' : 'Modifier cette catégorie'} ) }}
        </a>
        {{ include('category/_delete_form.html.twig') }}
    </div>

{% endblock %}
